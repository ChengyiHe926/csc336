<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Moive Database</title>
    
    <link rel="stylesheet" href="/static/style.css">
</head>

<body>
    <div class="header">
        <h3>Movie DB</h3>
    </div>
    <header>
        <%- include('./partials/header'); %>
    </header>

    <main class="container">

        <div class="slideshow-container">

            <% movies.forEach( mov=> { %>
                <div class="slides fade">
                    <img style="width:100%" src="<%= mov.poster_path%>" alt="<%= mov.title%>" style="width:100%">
                    <div class="text">
                        <a href="/details/movie/<%= mov.id %>">
                            <%= mov.title %>
                        </a>
                    </div>
                </div>
                <% }) %>
                    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
                    <a class="next" onclick="plusSlides(1)">&#10095;</a>
        </div>
        <div class="category">
            <h2>Trending Movies <a class="btn" href="/trending/movie">More</a></h2>
            <div class="cards">
                <% trendingMovies.forEach( mov=> { %>
                    <div class="card">
                        <a href="/details/movie/<%= mov.id%>">
                            <img style="width:100%" src="<%= mov.poster_path%>" alt="<%= mov.title%>" title="<%= mov.title%>">
                        </a>
                        <div style="text-align: center; color: white;">
                            <%= mov.title%>
                        </div>
                    </div>

                    <% }) %>

            </div>
        </div>
        <div class="category">
            <h2>Treding TVs <a class="btn" href="/trending/tv">More</a></h2>
            <div class="cards">
                <% trendingTvs.forEach( tv=> { %>
                    <div class="card">
                        <a href="/details/tv/<%= tv.id%>" >
                            <img style="width:100%" src="<%= tv.poster_path%>" alt="<%= tv.title%>" title="<%= tv.title%>">
                        </a>
                        <div style="text-align: center; color: white;">
                            <%= tv.title%>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
        <div class="category">
            <h2>Popular Movies <a class="btn" href="/popular/movie">More</a></h2>
            <div class="cards">
                <% popularMoives.forEach( mov=> { %>
                    <div class="card">
                        <a href="/details/movie/<%= mov.id%>">
                            <img style="width:100%" src="<%= mov.poster_path%>" alt="<%= mov.title%>" title="<%= mov.title%>">
                        </a>
                        <div style="text-align: center; color: white;">
                            <%= mov.title%>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
        <div class="category">
            <h2>Popular TVs <a class="btn" href="/popular/tv">More</a></h2>
            <div class="cards">
                <% popularTVs.forEach( tv=> { %>
                    <div class="card">
                        <a href="/details/tv/<%= tv.id%>">
                            <img style="width:100%" src="<%= tv.poster_path%>" alt="<%= tv.title%>" title="<%= tv.title%>">
                        </a>
                        <div style="text-align: center; color: white;">
                            <%= tv.title%>
                        </div>
                    </div>
                    <% }) %>

            </div>
        </div>
        <div>
        </div>
    </main>

    <script src="/static/js/index.js"></script>
</body>

</html>